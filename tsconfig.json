{
  "compilerOptions": {
    "module": "commonjs", // Asegúrate de que el módulo sea común si usas Node.js
    "target": "ES6", // Especifica el target que necesitas, puedes ajustarlo a ES2018 o superior
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true, // Opcional, pero puede ayudar a evitar problemas de tipo
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"] 
    }
  },
  "include": [
    "src/**/*", // Asegúrate de que incluya todos los archivos TS
    "tests/**/*" // Asegúrate de incluir los archivos de test
  ]
}
