{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"] 
    }
  },
  "include": [
    "src/**/*", 
    "tests/**/*" 
  ]
}
